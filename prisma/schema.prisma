// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int       @id @default(autoincrement())
  username  String
  password  String
  budget    Budget?
  timestamp DateTime  @default(now()) @db.Timestamp(3)
}

model Budget {
  id              Int       @id @default(autoincrement())
  yearMonth       Int // Manually create using year & month, e.g. 202101 for Jan, 202102 for March
  userId          Int
  user            User      @relation(fields: [userId], references: [id])
  categoryGroups  CategoryGroup[]
  accounts        Account[]
}

model Account {
  id            Int       @id @default(autoincrement())
  name          String
  budgetId      Int
  budget        Budget      @relation(fields: [budgetId], references: [id])
  transactions  Transaction[]
}

model Transaction {
  id            Int       @id @default(autoincrement())
  accountId     Int
  account       Account   @relation(fields: [accountId], references: [id])
  categoryId    Int
  category      Category  @relation(fields: [categoryId], references: [id])

  payee         String
  description   String
  amount        Float     @db.DoublePrecision
  timestamp     DateTime  @default(now()) @db.Timestamp(3)
}

model Category {
  id                Int             @id @default(autoincrement())
  transactions      Transaction[]
  categoryGroupId   Int
  categoryGroup     CategoryGroup   @relation(fields: [categoryGroupId], references: [id])
  name              String
  amount            Float           @db.DoublePrecision
}

model CategoryGroup {
  id          Int         @id @default(autoincrement())
  categories  Category[]
  budgetId    Int
  budget      Budget      @relation(fields: [budgetId], references: [id])
  name        String
}
